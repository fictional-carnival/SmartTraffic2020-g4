<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/list_tab_toolbar"
        layout="@layout/toolbar_main" />

    <TextView
        android:id="@+id/tv_1"
        android:textSize="35dp"
        android:layout_marginLeft="30dp"
        android:text="离好远"
        android:textColor="@color/Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_30">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="75dp"
            android:src="@mipmap/status_open" />
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="对外开放"
            android:textSize="25dp"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:background="@drawable/border_t_b"
        android:layout_width="match_parent"
        android:layout_height="100dp" >


        <ImageView
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:src="@mipmap/location_2"
            android:layout_marginLeft="@dimen/margin_30"/>

        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            android:id="@+id/tv_2"
            android:layout_weight="1"
            android:text="北京市"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:layout_weight="1"
            android:id="@+id/tv_3"
            android:text="55米"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:background="@drawable/border_b"
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <TextView
            android:layout_marginLeft="30dp"
            android:text="车位信息"
            android:textSize="40dp"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="30dp"
                android:textColor="#f00"
                android:text="5元每小时"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="35dp"
                android:text="停车费"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="121/158"
                android:textColor="#f00"
                android:textSize="30dp" />

            <TextView
                android:textSize="35dp"
                android:text="剩余车位"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="20dp"
            android:textSize="35dp"
            android:text="收费参考"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"/>

        <TextView
            android:layout_marginLeft="100dp"
            android:textSize="30dp"
            android:text="每小时5元，最高44元/天"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>